@using WebBanHangLaptop.Models;
@model List<Laptop>

@{
    foreach (var item in Model)
    {
        <div class="grid_1_of_4 images_1_of_4">
            <a href="preview-3.html"><img src="@Url.Content("~/HinhAnhSP/"+@item.AnhBia)" alt="" /></a>    
            @if (@item.TenLaptop.Length < 25)
                {

                <h2>@item.TenLaptop</h2>
            }
            else
            {
                <h2>@item.TenLaptop.Substring(0, 25) ... </h2>
            }
            <p>@item.MoTa.Substring(0, 85) ... </p>
            <p><span class="strike">$ @item.GiaGoc</span><span class="price">$ @item.GiaBan</span></p>
            <div class="button"><span><img src="/Content/Template/images/cart.jpg" alt="" /><a href="preview-3.html" class="cart-button">Add to Cart</a></span> </div>
            <div class="button"><span><a href="@Url.Action("XemChiTiet","DanhMucLaptopMoi",new { @MaLaptop=@item.MaLaptop})" class="details">Details</a></span></div>
        </div>
    }
}


