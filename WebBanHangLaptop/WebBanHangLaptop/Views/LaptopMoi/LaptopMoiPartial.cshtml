@using WebBanHangLaptop.Models;
@model List<Laptop>


<div class="section group">
    @{
        foreach (var item in Model)
        {
            <div class="listview_1_of_2 images_1_of_2">
                <div class="listimg listimg_1_of_1">
                    <a href="preview.html"> <img src="@Url.Content("~/HinhAnhSP/"+@item.AnhBia)" width="220" height="129"   alt="" /></a>
                </div>
                <div class="text list_2_of_1">
                    @if (@item.TenLaptop.Length < 25)
                    {

                        <h2>@item.TenLaptop</h2>
                    }
                    else
                    {
                        <h2>@item.TenLaptop.Substring(0, 25) ... </h2>
                    }
                    <p>@item.MoTa.Substring(0,75) ... </p>
                    <div class="button"><span><a href="preview.html">Add to cart</a></span></div>
                </div>
            </div>
        }
    }

</div>
